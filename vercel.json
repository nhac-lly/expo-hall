{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "headers": [
        {
            "source": "/(.*)\\.(gltf|glb|bin|hdr|jpg|jpeg|png|webp)$",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, s-maxage=86400, must-revalidate"
                }
            ]
        }
    ]
}